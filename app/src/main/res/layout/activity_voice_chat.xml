<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.activities.VoiceChat">


    <ImageView
        android:id="@+id/photo"
        android:layout_width="165dp"
        android:layout_height="153dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:text="Amany Hegazy"
        android:gravity="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/call"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="180dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo"
        app:srcCompat="@drawable/telephone" />

    <ImageView
        android:id="@+id/endCall"
        android:layout_width="70dp"
        android:layout_height="62dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="171dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo"
        app:srcCompat="@drawable/phone_call" />

    <ImageView
        android:id="@+id/message"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo"
        app:srcCompat="@drawable/messag" />

    <ImageView
        android:id="@+id/speaker"
        android:layout_width="38dp"
        android:layout_height="43dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toEndOf="@+id/message"
        app:layout_constraintTop_toBottomOf="@+id/photo"
        app:srcCompat="@drawable/speaker" />

    <ImageView
        android:id="@+id/mute"
        android:layout_width="39dp"
        android:layout_height="44dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo"
        app:srcCompat="@drawable/mute_microphone" />

    <ImageView
        android:id="@+id/unMute"
        android:layout_width="37dp"
        android:layout_height="43dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="60dp"
  android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/photo"
        app:srcCompat="@drawable/microphone" />

    <ImageView
        android:id="@+id/active_speaker"
        android:layout_width="38dp"
        android:layout_height="42dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="55dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/speaker"
        app:layout_constraintTop_toBottomOf="@+id/photo"
        app:srcCompat="@drawable/volume" />


</androidx.constraintlayout.widget.ConstraintLayout>